pipeline {
  agent {
    kubernetes {
      cloud "openshift"
      label 'skopeo-pod2'
      containerTemplate {
        name 'skopeo2'
        image 'jenkins-slave-appdev'
        resourceRequestMemory "1Gi"
        resourceLimitMemory "2Gi"
      }
    }
  }
  stages {
    stage('Run Skopeo 2') {
      steps {
        container('skopeo2') {
          sh 'skopeo --version'
        }
      }
    }
  }
}