pipeline {
  agent {
    kubernetes {
      cloud 'openshift'
      label 'skopeo-pod4'
      defaultContainer 'skopeo5'
      containerTemplate {
        name 'skopeo5'
        image "docker-registry.default.svc:5000/${GUID}-jenkins/jenkins-slave-appdev"
        resourceRequestMemory '1Gi'
        resourceLimitMemory '2Gi'
      }
    }
  }
  stages {
    stage('Run Skopeo 5') {
      steps {
        container('skopeo5') {
          sh 'skopeo --version'
        }
      }
    }
  }
}