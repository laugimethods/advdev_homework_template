pipeline {
  agent {
    kubernetes {
      cloud "openshift"
      label 'skopeo-pod4'
      containerTemplate {
        name 'skopeo4'
        image "docker-registry.default.svc:5000/${GUID}-jenkins/jenkins-slave-appdev"
        resourceRequestMemory "1Gi"
        resourceLimitMemory "2Gi"
      }
    }
  }
  stages {
    stage('Run Skopeo 4') {
      steps {
        container('skopeo4') {
          sh 'skopeo --version'
        }
      }
    }
  }
}